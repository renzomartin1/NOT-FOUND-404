<CheckBox>:
    size_hint: None, None
    border: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Color de fondo del CheckBox
        Ellipse:
            pos: self.pos
            size: self.size
    canvas.after:
        Color:
            rgba: 0, 1, 0, 1 
